{% if not isDev %}
  {% for asset in assets %}
      {% if asset ends with '.css' %}
        <link rel="stylesheet" href="{{ is_dev ? asset : '/assets/' ~ asset }}">
      {% endif %}
      {% if asset ends with '.js' %}
        <script src="/assets/{{ asset }}" type="module"></script>
      {% endif %}
  {% endfor %}
{% else %}
  <script src="{{ assetUrl('/@vite/client') }}" defer></script>
  <script src="{{ assetUrl(entry) }}" defer></script>
{% endif %}